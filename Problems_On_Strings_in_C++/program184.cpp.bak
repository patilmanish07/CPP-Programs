// Accept string from user & convert the string in Uppercase.
// hello->Hello

#include<iostream>
using namespace std;

void struprX(char str[])
{
	
	while(*str != '\0')
	{
		if((*str >= 'A')&&(*str <= 'Z'))
		{
			*str = *str - 32;
		}
		str++;
	}
}	

int main()
{
	char Arr[20];
	
	cout<<"Enter string"<<endl;       
	cin.getline(Arr,20);              
	
	struprX(Arr);        // StringUppercase(struprX)
	
    cout<<"String in Upper case :"<<Arr<<endl; 
	
	return 0;
	
}







